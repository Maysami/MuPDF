<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center"
    android:layout_centerInParent="true">

    <ImageButton
        android:id="@+id/img_play_mp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:padding="2dp"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_play_arrow"
        android:tint="@color/toolbar"/>

    <com.fanavartech.android.taneem.TextViewPlus
        android:id="@+id/tv_name_mp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/img_play_mp3"
        android:layout_toLeftOf="@+id/img_cancel_mp3"
        android:gravity="center"
        android:text="تفسیر تنعیم ، جزء 1"
        android:textColor="@android:color/black"
        app:customFont="fonts/IRANSans_Light.ttf" />

    <SeekBar
        android:id="@+id/songProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/img_play_mp3"
        android:layout_toLeftOf="@+id/img_cancel_mp3"
        android:layout_below="@+id/tv_name_mp3"
        android:theme="@style/Theme.AppCompat.Light"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"/>

    <ImageButton
        android:id="@+id/img_cancel_mp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:layout_margin="4dp"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_cancel"
        android:tint="@android:color/darker_gray" />
</RelativeLayout>